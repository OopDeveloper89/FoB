// First we require a nodejs module called "fs" for file system...
var fileSystemModule = require('fs');

// We take the file path argument...
var templatesFilePath = process.argv[2];

// Then we read the file...
var content = fileSystemModule.readFileSync(templatesFilePath, 'utf8');
var newContent = content.replace(/(if (!!!templates))/gi, '');

// Output the result...
console.log(newContent);
